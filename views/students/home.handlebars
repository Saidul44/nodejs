<div class="page-header">
	<h3>All Students</h3>
</div>
<table class="table">
	<thead>
		<th>ID</th>
		<th>Name</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Action</th>
	</thead>

	<tbody>
		{{#each students}}
			<tr>
				<td>{{ this.id }}</td>
				<td>{{ this.name }}</td>
				<td>{{ this.email }}</td>
				<td>{{ this.mobile }}</td>
				<td>
					<a href="student/{{ this.id }}/edit" class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i></a>
					<a href="student/{{ this.id }}/delete" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i></a>
				</td>
			</tr>
		{{/each}}
	</tbody>

</table